{
  "compilerOptions": {
    "target": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "module": "esnext",
    "sourceMap": true,
    "declaration": true,
    "isolatedModules": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "outDir": "./dist"
  },
  "include": ["src"]
}
